#include <iostream>

using namespace std;

int main()
{
    int n;
 int even=0;
 int odd=0;
 int positive=0;
 int negative=0;

 for(int i=0;i<5;i++){
    
    cin>>n;
    

    if(n%2==0) //even
      {
         even++;
      }
      
      if( n%2 !=0 ) //odd
        {
         odd++;
      }
     
      
      if(n>0)   //positive
      {
          positive++ ;
      }
      
    if(n<0)    //negative
  {
      negative++;
  }
    
 }
  cout<<even<<" valor(es) par(es)"<<endl;
  cout<<odd<<" valor(es) impar(es)"<<endl;
  cout<<positive<<" valor(es) positivo(s)"<<endl;
  cout<<negative<<" valor(es) negativo(s)"<<endl;

    return 0;
}
